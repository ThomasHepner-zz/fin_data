<% type = if data_type == '1'
						'UF'
					else
						'USD'
					end
%>
<!-- TODO: make remote datatable for better pagination -->
<table class="table">
	<thead>
		<tr>
			<th><%= type %></th>
			<th>Date</th>
			<th>CLP Value</th>
		</tr>
	</thead>
	<tbody>
		<% response.each do |value| %>
			<tr>
				<td></td>
				<td><%= value['Fecha'] %></td>
				<td><%= value['Valor'] %></td>
			</tr>
		<% end %>
	</tbody>
</table>