<%= form_tag reports_remote_lookup_path, method: :get, remote: true do %>
<h4>Choose data type and date range:</h4>
<div class="row">	
	<div class="form-group">
		<div class="col-xs-3">
			<%= select_tag 'data_type', options_for_select(@data_options.collect { |d| [d[:type], d[:value]] }), class: 'form-control' %>
		</div>
		<div class="col-xs-3">
			<%= text_field_tag 'date_from', nil, placeholder: 'Enter beginning date', class: 'form-control' %>
		</div>
		<div class="col-xs-3">
			<%= text_field_tag 'date_to', nil, placeholder: 'Enter ending date', class: 'form-control' %>
		</div>
		<div class="col-xs-3">
			<%= submit_tag 'Get report', class: 'btn btn-block btn-primary' %>
		</div>
	</div>
</div>
<!-- TODO: validate dates -->
<div class="row" id="data-stats">
	<div class="col-xs-4 col-xs-offset-4"></div>
</div>
<div class="row" id="lookup-results">
	<div class="col-xs-6" id="data-table"></div>
	<div class="col-xs-6 resultsGraph" id="graph"></div>
</div>
<% end %>