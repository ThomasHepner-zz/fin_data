<div class="row" id="data-stats">
	<div class="col-xs-4 col-xs-offset-4"></div>
</div>
<div class="row" id="lookup-results">
	<div class="col-xs-6" id="data-table"></div>
	<div class="col-xs-6 resultsGraph" id="graph"></div>
</div>
