<h4>Choose date range:</h4>
<div class="row">	
	<%= form_tag tmc_lookup_reports_path, method: :get, remote: true, id: 'reportForm' do %>
		<div class="form-group">
			<div class="col-xs-4">
				<%= text_field_tag 'date_from', nil, placeholder: 'Enter beginning date', class: 'form-control', required: true%>
			</div>
			<div class="col-xs-4">
				<%= text_field_tag 'date_to', nil, placeholder: 'Enter ending date', class: 'form-control', required: true %>
			</div>
			<div class="col-xs-4">
				<%= submit_tag 'Get TMCs', class: 'btn btn-block btn-primary' %>
			</div>
		</div>
<% end %>
</div>
